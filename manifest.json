{
  "manifest_version": 3,
  "name": "Send to Overcast",
  "description": "One-click save of podcast episodes into your Overcast account.",
  "version": "0.1.0",
  "permissions": ["storage", "activeTab", "scripting", "tabs"],
  "host_permissions": ["https://overcast.fm/*"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Send to Overcast",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
